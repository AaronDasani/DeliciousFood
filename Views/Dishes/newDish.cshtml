

@model Dish

<h6 class="text-center">Add a New Dish!</h6>
<hr>
<a href="home" class="btn btn-info shadow">Home</a>

<form action="addDish_processing" method="post" class="mt-5">
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="chef"></label>
                <input asp-for="chef">
                <small class="d-block"><span asp-validation-for="chef" class="text-danger font-weight-bold"></span></small>
            </div>

            <div class="form-group">
                <label asp-for="name"></label>
                <input asp-for="name">
                <small class="d-block"><span asp-validation-for="name" class="text-danger font-weight-bold"></span></small>
            </div>

            <div class="form-group">
                <label asp-for="calories"></label>
                <input asp-for="calories">
                <small class="d-block"><span asp-validation-for="calories" class="text-danger font-weight-bold"></span></small>
            </div>
        </div>
        <div class="col-2 mr-5">
            <div class="form-group">
                <label asp-for="tastiness"></label>
                <select asp-for="tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <small><span asp-validation-for="tastiness" class="text-danger font-weight-bold"></span></small>
            </div>

        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="description"></label>
                <textarea asp-for="description" cols="30" rows="5" ></textarea>
                <small class="d-block"><span asp-validation-for="description" class="text-danger font-weight-bold"></span></small>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-oultine-info shadow">Add Dish</button>
            </div>
        </div>
    </div>
</form>
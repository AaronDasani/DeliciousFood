

@model Dish
<div class="bg-light p-4 rounded">
    <h2 class="text-center text-secondary">Editing: @Model.name</h2>
    <hr>
    <a href="~/home" class="btn btn-primary btn-sm shadow">Home</a>

    <form action="~/editDish_processing" method="post" class="mt-5">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="chef"></label>
                    <input asp-for="chef">
                    <small><span asp-validation-for="chef" class="text-danger font-weight-bold"></span></small>
                </div>

                <div class="form-group">
                    <label asp-for="name"></label>
                    <input asp-for="name">
                    <small><span asp-validation-for="name" class="text-danger font-weight-bold"></span></small>
                </div>

                <div class="form-group">
                    <label asp-for="calories"></label>
                    <input asp-for="calories">
                    <small><span asp-validation-for="calories" class="text-danger font-weight-bold"></span></small>
                </div>
            </div>
            <div class="col-2">
                <div class="form-group">
                    <label asp-for="tastiness"></label>
                    <select asp-for="tastiness">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <small><span asp-validation-for="tastiness" class="text-danger font-weight-bold"></span></small>
                </div>

            </div>
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="description"></label>
                    <textarea asp-for="description" cols="30" rows="10"></textarea>
                    <small><span asp-validation-for="description" class="text-danger font-weight-bold"></span></small>
                </div>
                <input type="hidden" asp-for="dish_id">
                <div class="text-right">
                    <button type="submit" class="btn btn-outline-success">Edit Dish</button>
                </div>
            </div>
        </div>
    </form>
</div>